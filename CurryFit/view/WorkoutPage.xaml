                                        <SwipeGestureRecognizer Swiped="Handle_Test" Direction="Left" Threshold="5"></SwipeGestureRecognizer>
                                        <TapGestureRecognizer Tapped="Handle_Test3" CommandParameter="Right"></TapGestureRecognizer>
                                    </yummi:PancakeView.GestureRecognizers>
                                    <yummi:PancakeView.Border>
                                        <yummi:Border Thickness="0">
                                            <yummi:Border.GradientStops>
                                                <yummi:GradientStopCollection>
                                                    <yummi:GradientStop Color="#FF4816" Offset="0"></yummi:GradientStop>
                                                    <yummi:GradientStop Color="#FFE000" Offset="1"></yummi:GradientStop>
                                                </yummi:GradientStopCollection>
                                            </yummi:Border.GradientStops>
                                        </yummi:Border>
                                    </yummi:PancakeView.Border>
                                    <ImageButton BackgroundColor="Transparent" Source="timer_auto.png" Padding="-3,-3,-3,-3" Margin="0,0,0,0" HeightRequest="47" WidthRequest="47" VerticalOptions="Center" BorderColor="Transparent" BorderWidth="2" CornerRadius="50" IsEnabled="False"></ImageButton>
                                </yummi:PancakeView>

                            </StackLayout>
                        </yummi:PancakeView>
                    </StackLayout>
                    
                    <StackLayout  Margin="0,0,20,0" Orientation="Horizontal" HorizontalOptions="EndAndExpand">
                        <StackLayout>
                            <Label Text="MINUTES" MaxLines="1" FontFamily="M" FontSize="16" TextColor="#A6A0A6" HorizontalTextAlignment="Center"></Label>

                            <wp:WheelPicker SelectionLinesColor="Transparent" x:Name="WheelPickerMinutes" ItemTextColor="#4A484A" ItemTextSelectedColor="#A6A0A6" ItemTextFont="M"  Margin="10,0,0,0" HorizontalOptions="CenterAndExpand" Command="{Binding HandleMinChangeCmd}">
                                <wp:WheelDefinition Width="*" RowHeight="50" IsCircular="True">
                                    <DataTemplate>
                                        <Label Text="{Binding .}" TextColor="#A6A0A6" FontSize="42" FontFamily="M" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                                    </DataTemplate>
                                </wp:WheelDefinition>
                            </wp:WheelPicker>
                        </StackLayout>

                        <StackLayout Margin="20,0,0,0">
                            <Label Text="SECONDS" MaxLines="1" FontFamily="M" FontSize="16" TextColor="#A6A0A6" HorizontalTextAlignment="Center"></Label>

                            <wp:WheelPicker SelectionLinesColor="Transparent" x:Name="WheelPickerSeconds" ItemTextColor="#4A484A" ItemTextSelectedColor="#A6A0A6" ItemTextFont="M"  Margin="18,0,0,0" HorizontalOptions="CenterAndExpand" Command="{Binding HandleSecChangeCmd}">
                                <wp:WheelDefinition Width="*" RowHeight="50" IsCircular="True">
                                    <DataTemplate>
                                        <Label Text="{Binding .}" TextColor="#A6A0A6" FontSize="42" FontFamily="M" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                                    </DataTemplate>
                                </wp:WheelDefinition>
                            </wp:WheelPicker>
                        </StackLayout>

                    </StackLayout>
                    
                </StackLayout>

                <Label FontFamily="M" Text="PRESETS" TextColor="#A6A0A6" FontSize="16" Margin="23,0,0,0"></Label>


                <FlexLayout x:Name="PresetsView" Wrap="Wrap" JustifyContent="Start" Margin="10,0,10,0">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Orientation="Horizontal" FlexLayout.Order="{Binding PresetOrder}">
                                <Frame Padding="0,0,0,0" CornerRadius="3" Margin="10,0,10,10" HeightRequest="35" WidthRequest="100" IsVisible="{Binding IsPreset}">
                                    <Frame.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#504E50" Offset="0.1"/>
                                            <GradientStop Color="#2D2B2D" Offset="0.5" />
                                            <GradientStop Color="#2A282A" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Frame.Background>
                                    <StackLayout VerticalOptions="Center" Orientation="Horizontal">
                                        <Button Text="{Binding Display}" FontSize="16" FontFamily="M" TextColor="#A6A0A6" BackgroundColor="Transparent" HorizontalOptions="CenterAndExpand" Clicked="Handle_UsePresetTime" CommandParameter="{Binding Id}" Padding="-5,-5,-5,-5" WidthRequest="65"></Button>
                                        <ImageButton WidthRequest="28" HeightRequest="28"  Clicked="Handle_DeletePresetTime" CommandParameter="{Binding Id}" Margin="-10,0,0,0" Source="trashgray.png" BackgroundColor="Transparent"></ImageButton>
                                    </StackLayout>

                                </Frame>

                                <Frame Padding="0,0,0,0" CornerRadius="3" Margin="10,0,10,10" HeightRequest="35" WidthRequest="100" HorizontalOptions="Start" IsVisible="{Binding PresetMenuVisible}">
                                    <Frame.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#504E50" Offset="0.1"/>
                                            <GradientStop Color="#2D2B2D" Offset="0.5" />
                                            <GradientStop Color="#2A282A" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Frame.Background>
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                                        <ImageButton Source="add_gray_v2.png" BackgroundColor="Transparent" WidthRequest="28" HorizontalOptions="Start" VerticalOptions="CenterAndExpand" HeightRequest="28" Clicked="Handle_AddPresetTime" Margin="10,0,0,0"></ImageButton>
                                        <BoxView WidthRequest="1" BackgroundColor="#726E72" Margin="0,2,0,2" VerticalOptions="Fill" HorizontalOptions="CenterAndExpand"></BoxView>
                                        <ImageButton Source="editobject_gray_v2.png" BackgroundColor="Transparent" WidthRequest="28" VerticalOptions="CenterAndExpand" HeightRequest="28" Margin="0,0,10,0"></ImageButton>
                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>

                <Frame Padding="0,0,0,0" CornerRadius="6" Margin="10,0,10,0" VerticalOptions="EndAndExpand">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#504E50" Offset="0.1"/>
                            <GradientStop Color="#2D2B2D" Offset="0.5" />
                            <GradientStop Color="#2A282A" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Frame.Background>
                    
                    <StackLayout Margin="0,15,0,15">
                        <Label Text="TIMER SETTINGS" TextColor="#A6A0A6" FontFamily="M" Margin="10,0,0,0" FontSize="15"></Label>
                        <BoxView BackgroundColor="#726E72" HeightRequest="1" HorizontalOptions="FillAndExpand" Margin="13,0,13,0"></BoxView>
                        <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                            <Label Text="SHOW TIMER ON LOCK SCREEN" TextColor="#A6A0A6" FontFamily="M" Margin="13,0,0,0" FontSize="11" VerticalTextAlignment="Center"></Label>
                            <Frame HorizontalOptions="EndAndExpand" VerticalOptions="Start" Padding="0,0,0,0" HeightRequest="15" WidthRequest="15" Margin="0,0,13,0">
                                
                            </Frame>
                        </StackLayout>
                        <BoxView BackgroundColor="#726E72" HeightRequest="1" HorizontalOptions="FillAndExpand" Margin="13,0,13,0"></BoxView>
                        <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                            <Label Text="COUNT DOWN SIGNAL" TextColor="#A6A0A6" FontFamily="M" Margin="13,0,0,0" FontSize="11" VerticalTextAlignment="Center"></Label>
                            <Frame HorizontalOptions="EndAndExpand" VerticalOptions="Start" Padding="0,0,0,0" HeightRequest="15" WidthRequest="15" Margin="0,0,13,0">

                            </Frame>
                        </StackLayout>
                        <Label Text="SIGNAL AT" TextColor="#A6A0A6" FontFamily="M" Margin="13,5,0,0" FontSize="11"></Label>
                        <Label Text="5 seconds" TextColor="#A6A0A6" FontFamily="M" Margin="13,-6,0,0" FontSize="11"></Label>
                        <Label Text="SIGNAL TYPE" TextColor="#A6A0A6" FontFamily="M" Margin="13,0,0,0" FontSize="11"></Label>
                        <Label Text="Raise music volume by 10%" TextColor="#A6A0A6" FontFamily="M" Margin="13,-6,0,0" FontSize="11"></Label>
                    </StackLayout>
                    
                </Frame>

                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" Margin="15,0,15,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <yummi:PancakeView CornerRadius="50" HorizontalOptions="FillAndExpand" Margin="3,10,0,0" Grid.Column="0" BackgroundColor="#1F1E1F" Padding="0,-10,0,-10">
                        <yummi:PancakeView.Border>
                            <yummi:Border Thickness="2">
                                <yummi:Border.GradientStops>
                                    <yummi:GradientStopCollection>
                                        <yummi:GradientStop Color="#726E72" Offset="0"></yummi:GradientStop>
                                        <yummi:GradientStop Color="#726E72" Offset="1"></yummi:GradientStop>
                                    </yummi:GradientStopCollection>
                                </yummi:Border.GradientStops>
                            </yummi:Border>
                        </yummi:PancakeView.Border>
                        <Frame BackgroundColor="Transparent">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Handle_DiscardFilterView"></TapGestureRecognizer>
                            </Frame.GestureRecognizers>
                            <local:GradientLabel Text="DISCARD CHANGES" FontAttributes="Bold" VerticalOptions="Center" TextColor="#A6A0A6" MaxLines="1" FontSize="13" HorizontalTextAlignment="Center" TextColor1="#A6A0A6" TextColor2="#A6A0A6" FontFamily="M"/>
                        </Frame>
                    </yummi:PancakeView>
                    
                    <yummi:PancakeView CornerRadius="50" HorizontalOptions="FillAndExpand" Margin="3,10,0,0" Grid.Column="1" BackgroundColor="#2A282A" Padding="0,-10,0,-10">
                        <yummi:PancakeView.Border>
                            <yummi:Border Thickness="2">
                                <yummi:Border.GradientStops>
                                    <yummi:GradientStopCollection>
                                        <yummi:GradientStop Color="#FF4816" Offset="0"></yummi:GradientStop>
                                        <yummi:GradientStop Color="#FFE000" Offset="1"></yummi:GradientStop>
                                    </yummi:GradientStopCollection>
                                </yummi:Border.GradientStops>
                            </yummi:Border>
                        </yummi:PancakeView.Border>
                        <Frame BackgroundColor="Transparent">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Handle_SaveFilterView"></TapGestureRecognizer>
                            </Frame.GestureRecognizers>
                            <local:GradientLabel Text="SAVE AS CURRENT" FontAttributes="Bold" VerticalOptions="Center" MaxLines="1" FontSize="13" TextColor="#FF4816" HorizontalTextAlignment="Center"  TextColor1="#FF4816" TextColor2="#FFE000" FontFamily="M"/>
                        </Frame>
                    </yummi:PancakeView>
                </Grid>

                
                
                
            </StackLayout>

        </AbsoluteLayout>

    </ContentPage.Content>
</ContentPage>