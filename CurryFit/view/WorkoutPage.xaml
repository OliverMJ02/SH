<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:effects="clr-namespace:CurryFit.Effects"
             xmlns:local="clr-namespace:CurryFit.CustomRenderers"
             xmlns:yummi="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:wp="clr-namespace:Vapolia.WheelPickerForms;assembly=Vapolia.WheelPickerForms"
             x:Class="CurryFit.view.WorkoutPage"
             BackgroundColor="#1F1E1F"
             NavigationPage.HasNavigationBar="False"
             >
    <!--
    White          #FFFFFF
    Light gray     #A6A0A6
    Medium gray    #726E72
    Dark gray      #2A282A
    Orange fade    #FF4816
    Yellow fade    #FFE000
    Orange pastell #FF7B5E
    Yellow pastell #FFE88C
    
    Yellow         #FFE000
    Dark yellow    #CCB628
    Blue           #2C91FF
    Dark Blue      #284ECC
    Red            #FF1648
    Dark red       #993D51
    -->
    <ContentPage.Content>
        <AbsoluteLayout>
            <StackLayout AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0, 0, 1, 1">
                <StackLayout BackgroundColor="#2A282A" Orientation="Horizontal" HeightRequest="60" MinimumHeightRequest="60">
                    <ImageButton Source="QAicon_gray.png" WidthRequest="36" BackgroundColor="Transparent" Margin="10,0,0,0"></ImageButton>
                    <Label Text="WORKOUT" FontFamily="Montserrat" HorizontalOptions="CenterAndExpand" TextColor="#A6A0A6" FontSize="Medium" CharacterSpacing="3" HorizontalTextAlignment="Center" WidthRequest="150" VerticalTextAlignment="Center"></Label>
                    <ImageButton Source="settings_gray.png" WidthRequest="36" BackgroundColor="Transparent" Margin="0,0,10,0"></ImageButton>
                </StackLayout>
                <BoxView BackgroundColor="#A6A0A6" HorizontalOptions="FillAndExpand" HeightRequest="1" Margin="0,-6,0,0"></BoxView>
                <!-- Layout for exercises -->
                <StackLayout x:Name="ExerciseLayout" VerticalOptions="FillAndExpand">

                    <FlexLayout Direction="Row" Margin="10,10,10,10" JustifyContent="SpaceAround">

                        <StackLayout>
                            <local:GradientLabel TextColor="#A6A0A6" TextColor1="#A6A0A6" TextColor2="#A6A0A6" Text="M.G.S." FontAttributes="Bold" FontSize="Medium"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <StackLayout>
                            <local:GradientLabel TextColor1="White" TextColor2="White" TextColor="WHITE" Text="EXERCISES" FontAttributes="Bold" FontSize="Medium"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Handle_ToExercises"></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <StackLayout>
                            <local:GradientLabel TextColor="#A6A0A6" TextColor1="#A6A0A6" TextColor2="#A6A0A6" Text="PASS" FontAttributes="Bold" FontSize="Medium"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <StackLayout>
                            <local:GradientLabel TextColor="#A6A0A6" TextColor1="#A6A0A6" TextColor2="#A6A0A6" Text="LOGBOOK" FontAttributes="Bold" FontSize="Medium"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Handle_ToLogbook"></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </FlexLayout>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                        <Frame BackgroundColor="#2A282A" BorderColor="#A6A0A6" CornerRadius="20" Padding="-10,0,0,0" Margin="0,0,0,0" VerticalOptions="Center" HeightRequest="40" >
                            <StackLayout Orientation="Horizontal" BackgroundColor="Transparent" HeightRequest="30" VerticalOptions="Center">
                                <SearchBar x:Name="SearchBar" BackgroundColor="Transparent" Placeholder="Sök efter övningar" FontFamily="N" PlaceholderColor="#726E72" TextColor="#726E72" Margin="-30,0,0,0" FontSize="Body" HeightRequest="30" VerticalOptions="Center"></SearchBar>
                                <Image Source="search.png" HeightRequest="30" Margin="0,0,10,0"></Image>
                            </StackLayout>
                        </Frame>

                        <Frame BackgroundColor="#2A282A" BorderColor="#A6A0A6" CornerRadius="20" Padding="0,0,0,0" VerticalOptions="CenterAndExpand" HeightRequest="40">
                            <StackLayout Orientation="Horizontal">
                                <Image></Image>
                                <Button x:Name="FilterBtn" Text="Filter" BackgroundColor="Transparent" TextColor="#A6A0A6" FontAttributes="Bold" CharacterSpacing="1"></Button>
                            </StackLayout>

                        </Frame>

                    </StackLayout>

                    <StackLayout Margin="13,0,13,0">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="ADVERTISEMENT" FontSize="8" FontAttributes="Bold"></Label>
                            <BoxView HeightRequest="2" BackgroundColor="#2A282A" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="0,2,0,0"></BoxView>
                        </StackLayout>
                        <StackLayout HeightRequest="50" MinimumHeightRequest="50" BackgroundColor="Green" Margin="0,-3,0,1">
                            <Label Text="Ad" HorizontalTextAlignment="Center"></Label>
                        </StackLayout>
                        <BoxView BackgroundColor="#2A282A" HeightRequest="2"></BoxView>
                    </StackLayout>


                    <ScrollView Margin="0,0,0,0">

                        <FlexLayout x:Name="ExerciseCollection" Direction="Column" JustifyContent="Start" AlignItems="Center" Margin="13,0,13,0">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <Frame CornerRadius="8" BackgroundColor="#2A282A" Margin="0,3,0,3" Padding="0,0,0,0">
                                            <StackLayout>
                                                <StackLayout Orientation="Horizontal" Margin="10,10,10,0">
                                                    <Label TextColor="#A6A0A6" FontSize="Medium" Text="{Binding Name}" HorizontalOptions="Start" FontFamily="Nunito" FontAttributes="Bold"></Label>
                                                    <ImageButton HorizontalOptions="EndAndExpand" Source="{Binding FavorisedSource}" HeightRequest="25" BackgroundColor="Transparent" Clicked="Handle_Favorised" CommandParameter="{Binding Id}"></ImageButton>
                                                </StackLayout>

                                                <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Start" AlignItems="Start" >
                                                    <Frame BorderColor="#FF4816" BackgroundColor="Transparent" Padding="6,4,6,4" CornerRadius="5" Margin="10,5,-4,5">
                                                        <Label TextColor="#FF4816" Text="{Binding MainEquipment}" FontAttributes="Bold"></Label>
                                                    </Frame>
                                                    <Frame BorderColor="#FFE000" BackgroundColor="Transparent" Padding="6,4,6,4" CornerRadius="5" Margin="10,5,-4,5">
                                                        <Label TextColor="#FFE000" Text="{Binding MainMuscle}" FontAttributes="Bold"></Label>
                                                    </Frame>
                                                </FlexLayout>


                                                <StackLayout Orientation="Horizontal" Margin="13,0,0,13">
                                                    <Label TextColor="#A6A0A6" Text="Created by:"></Label>
                                                    <Label TextColor="#A6A0A6" Text="{Binding Creator}"></Label>
                                                    <Image Source="verified.png" HeightRequest="10"></Image>
                                                    <Button Text="Delete" HorizontalOptions="Center" CommandParameter="{Binding Id}" Clicked="Handle_DeleteExercise" HeightRequest="10" BackgroundColor="AliceBlue"></Button>
                                                </StackLayout>


                                            </StackLayout>
                                        </Frame>
                                    </StackLayout>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>

                    </ScrollView>

                    <StackLayout VerticalOptions="EndAndExpand" BackgroundColor="Transparent" Orientation="Horizontal" HorizontalOptions="Center">
                        <Button Text="+" FontSize="Title" HorizontalOptions="Center" Clicked="Handle_AddNewExercise" ></Button>
                        <Button Text="+" FontSize="Title" HorizontalOptions="Center" Clicked="Handle_AddNewExercise2" ></Button>
                    </StackLayout>
                </StackLayout>

                <!-- Layout for Logbook -->
                <StackLayout x:Name="LogbookLayout" IsVisible="False" VerticalOptions="FillAndExpand">
                    <StackLayout>
                        <FlexLayout Direction="Row" Margin="10,10,10,10" JustifyContent="SpaceAround">

                            <StackLayout>
                                <local:GradientLabel TextColor="#A6A0A6" TextColor1="#A6A0A6" TextColor2="#A6A0A6" Text="M.G.S." FontAttributes="Bold" FontSize="Medium"/>
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer></TapGestureRecognizer>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>

                            <StackLayout>
                                <local:GradientLabel TextColor="#A6A0A6" TextColor1="#A6A0A6" TextColor2="#A6A0A6" Text="EXERCISES" FontAttributes="Bold" FontSize="Medium"/>
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Handle_ToExercises"></TapGestureRecognizer>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>

                            <StackLayout>
                                <local:GradientLabel TextColor="#A6A0A6" TextColor1="#A6A0A6" TextColor2="#A6A0A6" Text="PASS" FontAttributes="Bold" FontSize="Medium"/>
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer></TapGestureRecognizer>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>

                            <StackLayout>
                                <local:GradientLabel TextColor1="White" TextColor2="White" TextColor="White" Text="LOGBOOK" FontAttributes="Bold" FontSize="Medium"/>
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Handle_ToLogbook"></TapGestureRecognizer>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>

                        </FlexLayout>

                        <ScrollView HeightRequest="5000">
                            <StackLayout>

                                <FlexLayout x:Name="BlockCollection" Direction="Column">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <StackLayout FlexLayout.Order="{Binding Order}" Margin="0,0,0,-10">

                                                <StackLayout Orientation="Horizontal" Margin="18,0,18,0">
                                                    <Label Text="{Binding Title}" FontSize="Micro" FontAttributes="Bold" TextColor="#A6A0A6" FontFamily="Montserrat"></Label>
                                                    <BoxView HeightRequest="2" MinimumHeightRequest="2" BackgroundColor="#A6A0A6" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="0,2,0,0"></BoxView>
                                                </StackLayout>

                                                <!-- Text Blocks-->
                                                <Frame Padding="10,10,10,10" BackgroundColor="#2A282A" CornerRadius="6" Margin="13,0,13,20" HorizontalOptions="FillAndExpand" IsVisible="{Binding TextBlockVisibility, FallbackValue=False}">
                                                   
                                                    <Frame.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#504E50" Offset="0.1"/>
                                                            <GradientStop Color="#2D2B2D" Offset="0.5" />
                                                            <GradientStop Color="#2A282A" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </Frame.Background>
                                                    <StackLayout>
                                                        <StackLayout IsVisible="{Binding IsEditing}">
                                                            <StackLayout Orientation="Horizontal">
                                                                <Frame Padding="0,0,0,0" CornerRadius="50" BorderColor="#1F1E1F" BackgroundColor="#2A282A" HorizontalOptions="FillAndExpand" Margin="0,0,0,0" HeightRequest="35" >
                                                                    <Entry Text="{Binding TextTitle}" Placeholder="Add title (optional)" Margin="10,0,5,0" FontFamily="M" PlaceholderColor="#726E72" TextColor="White" HorizontalOptions="FillAndExpand" FontSize="14" VerticalTextAlignment="Center">
                                                                        <Entry.Effects>
                                                                            <effects:PlainEntry/>
                                                                        </Entry.Effects>
                                                                    </Entry>
                                                                </Frame>
                                                                <ImageButton WidthRequest="30" HeightRequest="30" HorizontalOptions="Center" BackgroundColor="Red" IsVisible="{Binding HasText, FallbackValue=False}" Command="{Binding SaveTextBlockCmd}"></ImageButton>
                                                            </StackLayout>



                                                            <Frame Padding="0,0,0,0" CornerRadius="15" BorderColor="#1F1E1F" BackgroundColor="#2A282A" HorizontalOptions="FillAndExpand" Margin="0,5,0,0">
                                                                <local:CustomEditor Text="{Binding Text}" Placeholder="Type text here" Margin="10,0,5,0" FontFamily="M" PlaceholderColor="#726E72" TextColor="White" HorizontalOptions="FillAndExpand" FontSize="14" HeightRequest="68"></local:CustomEditor>
                                                            </Frame>
                                                        </StackLayout>

                                                        <StackLayout Padding="10,10,10,10">
                                                            <StackLayout.Triggers>
                                                                <DataTrigger TargetType="StackLayout" Binding="{Binding IsEditing}" Value="True">
                                                                    <Setter Property="IsVisible" Value="False" />
                                                                </DataTrigger>
                                                            </StackLayout.Triggers>
                                                            <StackLayout Orientation="Horizontal">
                                                                <Label Text="{Binding TextTitle}" FontFamily="N" FontSize="14" TextColor="White"></Label>
                                                                <ImageButton BackgroundColor="RoyalBlue" HeightRequest="30" WidthRequest="30" HorizontalOptions="EndAndExpand" Command="{Binding EditTextBlockCmd}"></ImageButton>
                                                            </StackLayout>
                                                            <Label FontFamily="N" FontSize="12" TextColor="White" Text="{Binding Text}" Margin="0,-10,0,0"></Label>
                                                            <ImageButton BackgroundColor="IndianRed" HeightRequest="30" WidthRequest="30" HorizontalOptions="EndAndExpand" Clicked="Handle_DeleteTextBlock" CommandParameter="{Binding Id}"></ImageButton>
                                                            
                                                        </StackLayout>

                                                    </StackLayout>
                                                    
                                                </Frame>

                                                <!-- To Do List-->
                                                <Frame Padding="10,10,10,10" BackgroundColor="#2A282A" CornerRadius="6" Margin="13,0,13,20" HorizontalOptions="FillAndExpand" IsVisible="{Binding ToDoListVisibility, FallbackValue=False}">

                                                    <Frame.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#504E50" Offset="0.1"/>
                                                            <GradientStop Color="#2D2B2D" Offset="0.5" />
                                                            <GradientStop Color="#2A282A" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </Frame.Background>
                                                    <StackLayout>
                                                        <Frame Padding="0,0,0,0" CornerRadius="50" BorderColor="#1F1E1F" BackgroundColor="#2A282A" HorizontalOptions="FillAndExpand" Margin="0,0,0,0" HeightRequest="34" HasShadow="True">
                                                            <Entry Placeholder="Add title (optional)" FontSize="14" FontFamily="N" PlaceholderColor="#726E72" TextColor="White" HeightRequest="34" VerticalOptions="CenterAndExpand" Margin="10,0,0,-5" Text="{Binding BlockTitle}">
                                                                <Entry.Effects>
                                                                    <effects:PlainEntry/>
                                                                </Entry.Effects>
                                                            </Entry>
                                                        </Frame>

                                                        <FlexLayout x:Name="ToDoListCollection" Margin="0,0,0,0" Direction="Column" BindableLayout.ItemsSource="{Binding ToDoItems}">
                                                            <BindableLayout.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackLayout>
                                                                        <Frame Padding="0,0,0,0" CornerRadius="50" BorderColor="#1F1E1F" BackgroundColor="#2A282A" HorizontalOptions="FillAndExpand" Margin="0,0,0,0" HeightRequest="34" HasShadow="True">
                                                                            <Entry Placeholder="Type text here" FontSize="14" FontFamily="N" PlaceholderColor="#726E72" TextColor="White" HeightRequest="34" VerticalOptions="CenterAndExpand" Margin="10,0,0,-5" Text="{Binding Text}">
                                                                                <Entry.Effects>
                                                                                    <effects:PlainEntry/>
                                                                                </Entry.Effects>
                                                                            </Entry>
                                                                        </Frame>
                                                                    </StackLayout>
                                                                </DataTemplate>
                                                            </BindableLayout.ItemTemplate>

                                                        </FlexLayout>

                                                        <yummi:PancakeView CornerRadius="50" HorizontalOptions="FillAndExpand" Margin="0,10,0,5" Grid.Column="0" HeightRequest="34">
                                                            <yummi:PancakeView.Border>
                                                                <yummi:Border Thickness="1">
                                                                    <yummi:Border.GradientStops>
                                                                        <yummi:GradientStopCollection>
                                                                            <yummi:GradientStop Color="#FF4816" Offset="0"></yummi:GradientStop>
                                                                            <yummi:GradientStop Color="#FFE000" Offset="1"></yummi:GradientStop>
                                                                        </yummi:GradientStopCollection>
                                                                    </yummi:Border.GradientStops>
                                                                </yummi:Border>
                                                            </yummi:PancakeView.Border>
                                                            <Button Text="ADD NEW ITEM" FontFamily="M" HeightRequest="35" HorizontalOptions="FillAndExpand" Padding="0,0,0,0" BackgroundColor="Transparent" CornerRadius="50" CommandParameter="{Binding Id}" Clicked="Handle_AddToDoItem"></Button>
                                                        </yummi:PancakeView>

                                                        <ImageButton HeightRequest="30" WidthRequest="30" BackgroundColor="Red" HorizontalOptions="Center" Clicked="Handle_DeleteToDoList" CommandParameter="{Binding Id}"></ImageButton>
                                                    </StackLayout>

                                                </Frame>

                                                <!-- Normal Blocks-->
                                                <Frame CornerRadius="7" Padding="5,10,30,10" Margin="13,0,13,20" IsVisible="{Binding IsNormalSet, FallbackValue=False}">
                                                    <Frame.Triggers>
                                                        <DataTrigger TargetType="Frame" Binding="{Binding NormalSetBlockVisibility}" Value="True">
                                                            <Setter Property="IsVisible" Value="False" />
                                                        </DataTrigger>
                                                    </Frame.Triggers>
                                                    <Frame.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#504E50" Offset="0.1"/>
                                                            <GradientStop Color="#2D2B2D" Offset="0.5" />
                                                            <GradientStop Color="#2A282A" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </Frame.Background>

                                                    <StackLayout Orientation="Horizontal">
                                                        <ImageButton Source="pointer_down_gray.png" BackgroundColor="Transparent" HorizontalOptions="Start" WidthRequest="35" HeightRequest="35" Command="{Binding UpdateBlockVisibilityCmd}"></ImageButton>
                                                        <Frame Padding="0,0,0,0" CornerRadius="50" BorderColor="#1F1E1F" BackgroundColor="#2A282A" HorizontalOptions="FillAndExpand" Margin="0,0,15,0" HeightRequest="35">
                                                            <StackLayout Orientation="Horizontal">
                                                                <Label Text="Benchpress" Margin="10,0,5,0" TextColor="White" VerticalOptions="Center" HorizontalOptions="FillAndExpand"></Label>
                                                                <ImageButton BorderColor="#A6A0A6" BackgroundColor="Transparent" BorderWidth="1" CornerRadius="50" HeightRequest="35" Source="forward_arrow_gray.png" CommandParameter="{Binding Id}"></ImageButton>
                                                            </StackLayout>
                                                        </Frame>
                                                        <Label FontFamily="M" VerticalTextAlignment="Center" TextColor="#A6A0A6" Text="{Binding NumberOfSets}"></Label>
                                                    </StackLayout>
                                                </Frame>


                                                <Frame IsVisible="{Binding NormalSetBlockVisibility, FallbackValue=False}" CornerRadius="7" Padding="0,0,0,0" Margin="13,0,13,20">
                                                    <Frame.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#504E50" Offset="0.1"/>
                                                            <GradientStop Color="#2D2B2D" Offset="0.5" />
                                                            <GradientStop Color="#2A282A" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </Frame.Background>
                                                    <StackLayout Margin="10,10,10,10">

                                                        <StackLayout>
                                                            <StackLayout Orientation="Horizontal">
                                                                <Frame Padding="0,0,0,0" BackgroundColor="Transparent" Margin="-5,0,0,0">
                                                                    <Frame.Triggers>
                                                                        <DataTrigger TargetType="Frame" Binding="{Binding IsNotFinished}" Value="True">
                                                                            <Setter Property="IsVisible" Value="False" />
                                                                        </DataTrigger>
                                                                    </Frame.Triggers>
                                                                    <ImageButton Source="pointer_up_gray.png" BackgroundColor="Transparent" HorizontalOptions="Start" WidthRequest="35" HeightRequest="35" Command="{Binding UpdateBlockVisibilityCmd}"></ImageButton>
                                                                </Frame>

                                                                <Frame Padding="0,0,0,0" CornerRadius="50" BorderColor="#1F1E1F" BackgroundColor="#2A282A" HorizontalOptions="FillAndExpand" Margin="0,0,5,0" HeightRequest="35">
                                                                    <StackLayout Orientation="Horizontal">
                                                                        <Label Text="Benchpress" Margin="10,0,5,0" TextColor="White" VerticalOptions="Center" HorizontalOptions="FillAndExpand"></Label>
                                                                        <ImageButton BorderColor="#A6A0A6" BackgroundColor="Transparent" BorderWidth="1" CornerRadius="50" HeightRequest="35" Source="forward_arrow_gray.png"></ImageButton>
                                                                    </StackLayout>
                                                                </Frame>

                                                                <Frame Padding="0,0,0,0" BorderColor="#A6A0A6" CornerRadius="50" BackgroundColor="#2A282A" Margin="0,0,5,0" HeightRequest="35" WidthRequest="100" IsVisible="{Binding IsNotFinished}">
                                                                    <StackLayout Orientation="Horizontal">
                                                                        <Button Text="kebab" Margin="10,10,0,10" HorizontalOptions="Center" TextColor="#A6A0A6" Clicked="Handle_ToFilterView" CommandParameter="{Binding Id}"></Button>
                                                                        <BoxView WidthRequest="20" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="20" BackgroundColor="Gray"></BoxView>
                                                                    </StackLayout>
                                                                </Frame>

                                                                <ImageButton BorderColor="#A6A0A6" VerticalOptions="Center" BorderWidth="1" WidthRequest="35" HeightRequest="35" CornerRadius="50" BackgroundColor="Transparent" Source="trashgray.png" Padding="3,3,3,3" CommandParameter="{Binding Id}" Clicked="Handle_DeleteNormalBlock"></ImageButton>
                                                            </StackLayout>

                                                            <StackLayout Orientation="Horizontal" IsVisible="{Binding IsNotFinished}">
                                                                <Frame Padding="0,0,0,0" Margin="0,0,0,0" CornerRadius="50" VerticalOptions="Center" HorizontalOptions="Start">
                                                                    <AbsoluteLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" WidthRequest="370">
                                                                        <Frame AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" Padding="0,0,0,0" CornerRadius="50" BackgroundColor="#2A282A" Margin="0,0,0,0"  HorizontalOptions="FillAndExpand" HeightRequest="35" BorderColor="#726E72">
                                                                            <StackLayout Orientation="Horizontal">
                                                                                <Label Text="RESTING TIMER" TextColor="#A6A0A6" FontSize="Small" FontFamily="M" VerticalOptions="Center" Margin="40,0,0,0" MaxLines="1" HorizontalOptions="FillAndExpand"></Label>
                                                                                <Label Text="{Binding TimerDisplay}" TextColor="#A6A0A6" FontSize="Small" FontFamily="M" VerticalOptions="Center" Margin="40,0,0,0" MaxLines="1" HorizontalOptions="FillAndExpand"></Label>
                                                                            </StackLayout>
                                                                        </Frame>
                                                                        <Frame x:Name="{Binding Id}" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0, 0, 1, 1"  Padding="0,0,0,0" CornerRadius="50" Margin="0,0,0,0" TranslationX="{Binding Width}" HeightRequest="35" BorderColor="Transparent" HorizontalOptions="FillAndExpand">
                                                                            <Frame.Background>
                                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                                    <GradientStop Color="#FFE000" Offset="0"/>

                                                                                    <GradientStop Color="#FF4816" Offset="1"/>
                                                                                </LinearGradientBrush>
                                                                            </Frame.Background>
                                                                            <StackLayout Orientation="Horizontal">
                                                                                <Label Text="RESTING TIMER" TranslationX="{Binding XMargin}" TextColor="#1F1E1F" FontSize="Small" FontFamily="M" Margin="0,0,0,0" VerticalOptions="Center" MaxLines="1" HorizontalOptions="FillAndExpand"></Label>
                                                                                <Label Text="{Binding TimerDisplay}" TranslationX="{Binding XMargin}" TextColor="#1F1E1F" FontSize="Small" FontFamily="M" Margin="0,0,0,0" VerticalOptions="Center" MaxLines="1" HorizontalOptions="FillAndExpand"></Label>
                                                                            </StackLayout>

                                                                        </Frame>
                                                                        <Frame AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" Padding="0,0,0,0" CornerRadius="50" HeightRequest="35" WidthRequest="35" HorizontalOptions="StartAndExpand" BackgroundColor="Transparent" BorderColor="#726E72">

                                                                        </Frame>

                                                                    </AbsoluteLayout>
                                                                </Frame>

                                                                <ImageButton  Padding="0,0,0,0" Margin="5,0,0,0" BackgroundColor="Red" Command="{Binding HandleRestingTimerCmd}"  CommandParameter="{Binding Id}" HeightRequest="35" WidthRequest="35" HorizontalOptions="EndAndExpand" VerticalOptions="Center" CornerRadius="50" ></ImageButton>
                                                            </StackLayout>
                                                        </StackLayout>

                                                        <BoxView HeightRequest="1" HorizontalOptions="Fill" BackgroundColor="#A6A0A6" Margin="-11,0,-10,-10"></BoxView>

                                                        <FlexLayout Margin="0,0,0,0" Direction="Column" x:Name="SetsLayout" BindableLayout.ItemsSource="{Binding NormalSets}">
                                                            <BindableLayout.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackLayout Margin="0,20,0,0">
                                                                        <StackLayout  Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="-10,0,0,0">
                                                                            <ImageButton Source="{Binding IsVisibleSource}" HeightRequest="35" VerticalOptions="Start" HorizontalOptions="Center" BackgroundColor="Transparent" Margin="0,-10,-5,0" Command="{Binding UpdateSetVisibilityCmd}"></ImageButton>
                                                                            <Label Text="{Binding Title}" TextColor="#A6A0A6" HorizontalOptions="FillAndExpand" FontFamily="M" FontSize="14.5"></Label>
                                                                            <Button Padding="0,0,0,0" HorizontalOptions="EndAndExpand" TextColor="#A6A0A6" VerticalOptions="Start" FontSize="14.5" FontFamily="M" HeightRequest="17" BackgroundColor="Transparent" Command="{Binding UpdateSetVisibilityCmd}">
                                                                                <Button.Text>
                                                                                    <MultiBinding StringFormat="{}{0} REPS,  {1} KG">
                                                                                        <Binding Path="Reps" />
                                                                                        <Binding Path="Weight" />
                                                                                    </MultiBinding>
                                                                                </Button.Text>
                                                                                <Button.Triggers>
                                                                                    <DataTrigger TargetType="Button" Binding="{Binding IsVisible}" Value="True">
                                                                                        <Setter Property="IsVisible" Value="False" />
                                                                                    </DataTrigger>
                                                                                </Button.Triggers>
                                                                            </Button>
