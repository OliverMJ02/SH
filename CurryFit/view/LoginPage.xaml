<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurryFit.view.LoginPage"
             xmlns:effects="clr-namespace:CurryFit.Effects"
             xmlns:local="clr-namespace:CurryFit.CustomRenderers"
             BackgroundColor="#1F1E1F"
             NavigationPage.HasNavigationBar="False">
   
    <ContentPage.Content>
        <StackLayout >
            <AbsoluteLayout  >
                <StackLayout AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" Spacing="0" VerticalOptions="StartAndExpand">
                    <Image Source="login_beginwithregin.png" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0,-3,0,0"/>
                </StackLayout>
                <StackLayout AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" Spacing="0" VerticalOptions="EndAndExpand" Margin="0,0,0,20">
                    <!--Grid för sociala medier-->
                    <Grid Margin="10,0,10,0" HorizontalOptions="Center" RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackLayout  Grid.Column="0" Grid.Row="0" Spacing="0">
                            <Frame BackgroundColor="{DynamicResource BCGrey}" HorizontalOptions="StartAndExpand" VerticalOptions="Fill" CornerRadius="10" HeightRequest="15" Margin="0,0,0,0">
                                <StackLayout Orientation="Horizontal" Spacing="0" HeightRequest="15" WidthRequest="300" HorizontalOptions="Start">
                                    <Image Source="google_icon.png" HeightRequest="20" Scale="1" Margin="-4,0,0,0"/>
                                    <Label Text="Sign in with Google" FontFamily="N" HorizontalTextAlignment="Start"  TextColor="{DynamicResource RiceWhite}" FontSize="10" VerticalOptions="Center" Margin="8,-1,0,0"/>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                        <StackLayout  Grid.Column="1" Grid.Row="0" Spacing="0" >
                            <Frame BackgroundColor="{DynamicResource BCGrey}" HorizontalOptions="StartAndExpand" VerticalOptions="Fill" CornerRadius="10" HeightRequest="15" Margin="0,0,0,0">
                                <StackLayout Orientation="Horizontal" Spacing="0" HeightRequest="15" WidthRequest="300" HorizontalOptions="Start">
                                    <Image Source="facebook_icon.png" HeightRequest="20" Scale="1" Margin="0"/>
                                    <Label Text="Sign in with Facebook" FontFamily="N" HorizontalTextAlignment="Start"  TextColor="{DynamicResource RiceWhite}" FontSize="10" VerticalOptions="Center" Margin="8,-1,0,0"/>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                        <StackLayout  Grid.Column="0" Grid.Row="1" Spacing="0" Margin="0,3,0,0">
                            <Frame BackgroundColor="{DynamicResource BCGrey}" HorizontalOptions="StartAndExpand" VerticalOptions="Fill" CornerRadius="10" HeightRequest="15" Margin="0,0,0,0">
                                <StackLayout Orientation="Horizontal" Spacing="0" HeightRequest="15" WidthRequest="300" HorizontalOptions="Start">
                                    <Image Source="apple_icon.png" HeightRequest="20" Scale="1" Margin="-4,-3,0,0"/>
                                    <Label Text="Sign in with Apple" FontFamily="N" HorizontalTextAlignment="Start"  TextColor="{DynamicResource RiceWhite}" FontSize="10" VerticalOptions="Center" Margin="8,-1,0,0"/>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                        <StackLayout  Grid.Column="1" Grid.Row="1" Spacing="0"  Margin="0,3,0,0">
                            <Frame BackgroundColor="{DynamicResource BCGrey}" HorizontalOptions="StartAndExpand" VerticalOptions="Fill" CornerRadius="10" HeightRequest="15" Margin="0,0,0,0">
                                <StackLayout Orientation="Horizontal" Spacing="0" HeightRequest="15" WidthRequest="300" HorizontalOptions="Start">
                                    <Image Source="twitter_icon.png" HeightRequest="20" Scale="1" Margin="0"/>
                                    <Label Text="Sign in with Twitter" FontFamily="N" HorizontalTextAlignment="Start"  TextColor="{DynamicResource RiceWhite}" FontSize="10" VerticalOptions="Center" Margin="8,-1,0,0"/>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                        <!--OR-->
                        <StackLayout Grid.ColumnSpan="2" Grid.Row="2" Spacing="0" HorizontalOptions="Center" Padding="0,30,0,0">
                            <Label Text="OR" FontSize="16" FontFamily="M" TextColor="{DynamicResource AshGrey}"/>
                        </StackLayout>
                    </Grid>
                    <!--Mail och Lösen entries-->
                    <Entry IsPassword="False" Keyboard="Email" Placeholder="Email Address" PlaceholderColor="{DynamicResource SPGrey}" TextColor="{DynamicResource RiceWhite}" FontFamily="N" FontSize="16" Margin="15,20,15,0"/>
                    <Entry IsPassword="True" Keyboard="Plain" Placeholder="Password" PlaceholderColor="{DynamicResource SPGrey}" TextColor="{DynamicResource RiceWhite}" FontFamily="N" FontSize="16" Margin="15,15,15,0"/>
                    <!--Knapp och text nedan--> 
                    <StackLayout VerticalOptions="End" Margin="0,30,0,0">
                        <Frame CornerRadius="10" HasShadow="True" Margin="15,0,15,0">
                            <Frame.Background>
                                <LinearGradientBrush >
                                    <GradientStop Color="{DynamicResource ThemeYellow}" Offset="0"/>
                                    <GradientStop Color="{DynamicResource ThemeOrange}" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Frame.Background>
                            <AbsoluteLayout>
                                <StackLayout AbsoluteLayout.LayoutBounds="0.5,4" AbsoluteLayout.LayoutFlags="XProportional" VerticalOptions="End" HeightRequest="14">
                                    <Label Text="SIGN IN" FontSize="20" FontFamily="M" TextColor="{DynamicResource BCGrey}" HorizontalTextAlignment="Center" Margin="0,-8,0,0" VerticalOptions="CenterAndExpand"/>
                                </StackLayout>
                            </AbsoluteLayout>
                        </Frame>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="End" Margin="0,20,0,0">
                        <Label Text="New to Regin?" FontSize="16" FontFamily="N" TextColor="{DynamicResource AshGrey}" HorizontalTextAlignment="Center" Margin="0,0,0,0" VerticalOptions="CenterAndExpand"/>
                        <local:GradientLabel Text="Create Account" FontSize="16" FontFamily="N" TextColor="#ffe000" TextColor1="#ffe000" TextColor2="#FF4816" HorizontalTextAlignment="Center" Margin="0,0,0,0" VerticalOptions="CenterAndExpand"/>
                    </StackLayout>
                </StackLayout>
            </AbsoluteLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>