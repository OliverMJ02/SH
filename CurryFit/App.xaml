<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurryFit.App">
    <Application.Resources>
        <!--Resource Definitions-->
        <ResourceDictionary>
            <Color x:Key="SPGrey">#726E72</Color>
            <Color x:Key="BCGrey">#2A282A</Color>
            <Color x:Key="AshGrey">#A6A0A6</Color>
            <Color x:Key="RiceWhite">#FFFFFF</Color>
            <Color x:Key="Black">#1F1E1F</Color>
            

                <!--Global Styles-->
            <Style ApplyToDerivedTypes="true" TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource BCGrey}"/>
                <Setter Property="BarTextColor" Value="{StaticResource AshGrey}"/>
                <Setter Property="Background" Value="{StaticResource AshGrey}"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{DynamicResource BCGrey}"/>
                <Setter Property="TextColor" Value="{StaticResource AshGrey}"/>
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>